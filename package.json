{
  "name": "team4procoaching-website",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "prepare": "husky",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
    "fix": "pnpm run lint:fix && pnpm run format",
    "typecheck": "astro check",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "pnpm run format:biome && pnpm run format:prettier",
    "format:check": "pnpm run format:biome:check && pnpm run format:prettier:check",
    "format:biome": "biome format --write .",
    "format:biome:check": "biome format --check .",
    "format:prettier": "prettier --write \"**/*.{astro,md,mdx,yml,yaml}\" --cache",
    "format:prettier:check": "prettier --check \"**/*.{astro,md,mdx,yml,yaml}\" --cache",
    "organize-imports": "biome check --write --organize-imports-enabled=true --formatter-enabled=false --linter-enabled=false .",
    "validate:renovate": "pnpm dlx --package renovate renovate-config-validator"
  },
  "dependencies": {
    "astro": "^5.16.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "*.{json,css}": [
      "biome format --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "*.{astro,md,mdx,yml,yaml}": [
      "prettier --write --cache"
    ]
  }
}
